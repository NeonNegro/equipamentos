generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id       Int    @id @default(autoincrement())
  name     String
  cpf      String @unique
  email    String @unique
  password String

  rentals      Rental[]

  @@map("customers")
}

model Equipament {
  id     Int    @id @default(autoincrement())
  name   String @unique
  amount Int

  rentals    Rental[]

  @@map("equipaments")
}

model Rental {
  id           Int      @id @default(autoincrement())
  customerId   Int
  equipamentId Int
  rentalDate   DateTime @default(now())

  customer   Customer   @relation(fields: [customerId], references: [id])
  equipament Equipament @relation(fields: [equipamentId], references: [id])

  @@map("rentals")
}
